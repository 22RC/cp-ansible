---
exclude_paths:
  - hosts_example.yml
  # Relative path task within a block not getting parsed by ansible-lint
  - roles/confluent.kafka_rest/tasks/health_check.yml
  - roles/confluent.control_center/tasks/health_check.yml
  - roles/confluent.ksql/tasks/health_check.yml
  - roles/confluent.schema_registry/tasks/health_check.yml
  - roles/confluent.zookeeper/tasks/health_check.yml
  - roles/confluent.kafka_connect/tasks/health_check.yml
  - roles/confluent.kafka_connect_replicator/tasks/health_check.yml
  - roles/confluent.kafka_broker/tasks/health_check.yml
skip_list:
  - risky-shell-pipe
  - command-instead-of-shell
  - var-spacing
  - unnamed-task
  - meta-no-info
  - role-name
  - package-latest
  - empty-string-compare
  - no-handler
